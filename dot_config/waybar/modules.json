{
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent-workspaces": {
             "*": 0
        }       
    },

    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Center Modules

    "clock": {
        "format": "{: %I:%M  %m/%d}",
        "tooltip-format": "<tt>{calendar}</tt>"
    },

    // Hardware Modules

    "temperature": {
        "interval": 10,
        "format": " {}°C",
        "max-length": 10,
        "on-click": "kitty htop"
    },
    
    "cpu": {
        "interval": 10,
        "format": " {}%",
        "max-length": 10,
        "on-click": "htop"
    },

    "memory": {
        "interval": 30,
        "format": " {}%",
        "format-alt":" {used:0.1f}G",
        "max-length": 10,
        "on-click": "htop"
    },

    // Setting Modules

    "battery": {
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon}",
        "format-icons": ["", ""],
        "tooltip-format":"{percent}%"
    },

    "pulseaudio#volume": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "",
        "on-click": "pamixer -t",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "tooltip": false,
        "format-source": " {volume}%",
        "format-source-muted": "",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "scroll-step": 5
    },

    "network": {
        "format": "{ifname}",
        "format-wifi": "",
        "format-ethernet": "",
        "format-disconnected": "",
        "tooltip-format": " {ifname} via {gwaddri}",
        "tooltip-format-wifi": " {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": " {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "kitty --class floating nmtui"
    },

    "bluetooth": {
        "format": " on",
        "format-disabled": " off",
        "format-off": " off",
        "interval": 30,
        "on-click": "blueman-manager"
    },

    // Custom Modules

    "custom/power_mode": {
        "interval": "once",
        "exec": "~/.config/hypr/scripts/get_power_mode.sh",
        "exec-on-event": true,
        "on-click": "~/.config/hypr/scripts/toggle_power_mode.sh",
        "format": "{}",
        "return-type": "json"
    },
    
    "custom/hardware_icon": {
        "format": "{icon}",
        "format-icons": [""],
        "tooltip": false
    },

    "custom/setting_icon": {
        "format": "{icon}",
        "format-icons": [""],
        "tooltip": false
    },

    "custom/chatgpt": {
        "format": "",
        "on-click": "chromium --app=https://chat.openai.com",
        "tooltip": false
    }, 

    "custom/spotify": {
        "format": "",
        "on-click": "chromium --app=https://open.spotify.com",
        "tooltip": false
    }, 

    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },

    "custom/w11": {
        "format": "",
        "tooltip": false,
        "on-click": "~/.config/hypr/scripts/init_windows_vm.sh"
    },

    "custom/todo": {
        "format": "",
        "tooltip": false,
        "on-click": "chromium --app=https://to-do.live.com/tasks/important"
    },

    // Groups

    "group/hardware":{
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-top-to-bottom": true
        },        
        "modules": [
            "custom/hardware_icon",
            "temperature",
            "cpu",
            "memory"
        ]
    },

    "group/setting":{
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 350,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },        
        "modules": [
            "custom/setting_icon",
            "network",
            "bluetooth",
            "backlight",
            "battery",
            "custom/power_mode",
            "pulseaudio#microphone",
            "pulseaudio#volume"
        ]
    },

    "group/gadget":{
        "orientation": "inherit",     
        "modules": [
            // "custom/w11",
            "custom/chatgpt",
            "custom/todo",
            "custom/spotify"
        ]
    }
}
